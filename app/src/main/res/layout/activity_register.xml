<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#101214"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"

        app:srcCompat="@drawable/_027961"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="50dp"
        style="@style/icon" />

    <GridLayout
        android:id="@+id/Grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="80dp">

        <Button
            android:id="@+id/btSignIn"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:text="Sign in"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationX="60dp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="220dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="15dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:drawableTint="#CF1515"
            android:text="|"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:translationX="65dp"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="205dp" />

        <Button
            android:id="@+id/btRegister"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:drawableTint="#CF1515"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="220dp" />

    </GridLayout>


    <LinearLayout

        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        android:textAlignment="center"
        android:translationY="100dp">

        <TextView
            android:id="@+id/tverror"
            android:layout_width="366dp"
            android:layout_height="36dp"
            android:textColor="#9E0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="User"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="323dp" />

        <EditText
            android:id="@+id/edtUser"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:drawableTint="#CF1515"
            android:ems="10"
            android:inputType="text|textPersonName"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="350dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="323dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:drawableTint="#CF1515"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="350dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="424dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:drawableTint="#CF1515"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="459dp" />




        <Button
            android:id="@+id/btRegister2"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:drawableTint="#CF1515"
            android:text="Register"
            android:textColor="#FDFCFC"
            android:textSize="20sp"
            android:translationY="16dp"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="608dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="363dp"
            android:layout_height="43dp" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
